@model List<About>
<section id="about" class="about section">

	<!-- Section Title -->
	<div class="container section-title" data-aos="fade-up">
		<h2>Hakkımda</h2>
	</div><!-- End Section Title -->

	<div class="container" data-aos="fade-up" data-aos-delay="100">
		@foreach (var item in Model)
		{
		<div class="row gy-4 justify-content-center">
			<div class="col-lg-4">
                    <img src="/MyResume-1.0.0/assets/img/profile-img.jpg" class="img-fluid" alt="Profile Image">
				<img src="@item.ImageUrl" class="img-fluid" alt="">
			</div>
			<div class="col-lg-8 content">
				<h2>Ben Kimim ?</h2>
				<p class="fst-italic py-3">
					@item.Title
					
				</p>
					<div class="row">
						<div class="col-lg-6">
							<ul>
								<li>
									<i class="bi bi-chevron-right"></i>
									<strong>Doğum Tarihi:</strong>
									<span>@DateTime.Parse(item.Birtday).ToString("dd/MM/yyyy")</span></li>

								<li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.website</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
							</ul>
						</div>
						<div class="col-lg-6">
							<ul>
								<li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>@item.Degree</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
								<li><i class="bi bi-chevron-right"></i> <strong>Çalışma Durumu:</strong> <span>@item.Freelance</span></li>
							</ul>
						</div>
					</div>
				<p class="py-3">
					@item.SubTitle
				</p>
			</div>
		</div>
		}
	</div>
</section><!-- /About Section -->
